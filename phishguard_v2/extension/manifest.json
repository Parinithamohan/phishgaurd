{
  "manifest_version": 3,
  "name": "PhishGuard",
  "version": "1.0",
  "description": "Real-time phishing detection using AI",
  
  "permissions": ["tabs"],

  "host_permissions": [
    "*://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
